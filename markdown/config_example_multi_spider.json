{
    "base_url": "https://www.colorado.edu/",
    "crawl_rules": {
        "allow_patterns": [],
        "deny_patterns": [
            "/login",
            "/logout",
            "/admin",
            "\\.pdf$",
            "\\.jpg$",
            "\\.png$",
            "\\.gif$",
            "\\.zip$",
            "\\.doc$",
            "\\.docx$"
        ]
    },
    "settings": {
        "USER_AGENT": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36",
        "ROBOTSTXT_OBEY": true,
        "DOWNLOAD_DELAY": 1,
        "CONCURRENT_REQUESTS": 16,
        "CONCURRENT_REQUESTS_PER_DOMAIN": 8,
        "DEPTH_LIMIT": 0,
        "CLOSESPIDER_PAGECOUNT": 100,
        "HTTPCACHE_ENABLED": true,
        "HTTPCACHE_EXPIRATION_SECS": 86400,
        "HTTPCACHE_DIR": "httpcache",
        
        "_comment": "Choose duplicate filter: 'sqlite' (default, no deps), 'redis' (best for distributed), or 'file' (simple)",
        "DUPEFILTER_CLASS": "sqlite",
        
        "_comment_sqlite": "SQLite settings - shared database file",
        "DUPEFILTER_DB_PATH": "shared_urls.db",
        
        "_comment_redis": "Redis settings - requires Redis server running",
        "DUPEFILTER_REDIS_URL": "redis://localhost:6379/0",
        "DUPEFILTER_KEY_PREFIX": "scrapy:dupefilter:colorado",
        
        "_comment_file": "File-based settings - simple but has race conditions",
        "DUPEFILTER_FILE_PATH": "seen_urls.txt"
    }
}
